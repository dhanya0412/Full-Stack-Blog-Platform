<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link href="/style.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">

    <style>
        .blog-toggle {
            display: none;
        }

        .blog-toggle.active {
            display: flex;
        }

        .navbar-center {
            flex: 1;
            display: flex;
            justify-content: center;
        }
    </style>

</head>

<body>
    <div id="header">
        <nav class="navbar">
            <div class="navbar-left">
                <a href="/">MyBlog</a>
            </div>

            <div class="navbar-center">
                <form class="d-flex" onsubmit="event.preventDefault(); filterBlogs()">
                    <input class="form-control me-2" type="search" placeholder="search blogs here" name="search"
                        oninput="filterBlogs()" />

                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
            </div>


            <div class="navbar-right">
                <a onclick="showActiveClass('allBlogs')" class="register-link">ALL BLOGS</a>
                <a onclick="showActiveClass('myBlogs')" class="register-link">MY BLOG</a>
                <a href="/blog/addBlog" class="register-link">ADD BLOG</a>
                <% if (user) { %>
                    <a href="/logout" class="register-link text-danger">LOGOUT</a>
                    <% } %>

            </div>
        </nav>

      

        <div id="allBlogs" class='container d-flex active mt-3 d-flex flex-wrap gap-3'>
            <% allblogs.forEach(blog=>{%>
                <div class="card" style="width: 18rem;">
                    <img src="<%=blog.coverImage%>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=blog.title%>
                        </h5>

                        <a href="/blog/<%=blog._id%>" class="btn btn-primary">VIEW</a>
                    </div>
                </div>

                <%} )%>



        </div>

        <div id="myBlogs" class='container d-none mt-3 d-flex flex-wrap gap-3'>
            <% myblogs.forEach(blog=> { %>
                <div class="card" style="width: 18rem;">
                    <img src="<%= blog.coverImage %>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= blog.title %>
                        </h5>
                        <a href="/blog/<%= blog._id %>" class="btn btn-primary">VIEW</a>
                        <form action="/blog/<%= blog._id %>?_method=DELETE" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-danger">DELETE</button>
                        </form>
                        <a href="/blog/<%= blog._id %>/edit" class="btn btn-success">EDIT</a>
                    </div>
                </div>
                <% }) %>
        </div>

        <script>
            function showActiveClass(id) {
                document.querySelectorAll('.container').forEach(section => {

                    if (section.classList.contains('d-flex')) {
                        section.classList.remove('d-flex');
                        section.classList.add('d-none');

                    }

                })
                document.getElementById(id).classList.remove("d-none");
                document.getElementById(id).classList.add("d-flex");
            }
        </script>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous">
        </script>

    <script>
        function filterBlogs() {
            const searchTerm = document.querySelector('input[name="search"]').value.toLowerCase();

            const allSection = document.getElementById('allBlogs');
            const mySection = document.getElementById('myBlogs');

            const visibleSection = allSection.classList.contains('d-flex') ? allSection : mySection;
            const cards = visibleSection.querySelectorAll('.card');

            cards.forEach(card => {
                const title = card.querySelector('.card-title').textContent.toLowerCase();
                if (title.includes(searchTerm)) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        }
    </script>

</body>

</html>